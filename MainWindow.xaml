<Window x:Class="u1_01_AidenJRWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:u1_01_AidenJRWPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <StackPanel Margin="0,0,2,2" Height="223" VerticalAlignment="Bottom">
        <Label x:Name="lbloutput" 
               Content="Hello World, My name Is Aiden"
               FontSize="15"
               FontStyle="Italic"
               FontWeight="ExtraBold"
               HorizontalAlignment="Center"
               VerticalAlignment="Top"
               Background="Red">
        </Label>
        <Button x:Name="btnClickme"
                Content="Click Me!"
                Click="btnClickme_Click" HorizontalAlignment="Center" Width="200" Height="50"
                Background="Blue"/>

    </StackPanel>
</Window>
